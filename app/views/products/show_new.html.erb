<p id="notice"><%= notice %></p>
<ul>
  <li><%= link_to 'show_new_gema', product_new_gem_path(@product) %></li>
  <li><%= link_to 'show', @product %></li>
</ul>
<div class="row">
  <div class="col-6">
    <h1><%= @product.nombre %></h1>
    <p>
      <strong>Descripcion:</strong>
      <%= @product.descripcion %>
    </p>
    <p>
      <%= image_tag @product.image_url unless @product.image_url.nil? %>
    </p>
  </div>
  <div class="col-6">
    <% if @product.product_colors.any? %>
      <%= render partial: 'product_colors/product_color_carousel', locals: {product_colors: @product.product_colors} %>
    <% else %>
      <h1>Este producto no tiene variantes en colores</h1>
    <% end %>
  </div>
</div>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

